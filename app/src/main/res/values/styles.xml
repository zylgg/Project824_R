<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/zaozigongfang</item>
    </style>
    <style name="TransTheme" parent="@style/BaseAppTheme">
        <item name="colorPrimaryDark">@color/transparent</item>
        <item name="android:fontFamily">@font/zaozigongfang</item>
    </style>
    <style name="AppTheme" parent="@style/BaseAppTheme">
    </style>

    <style name="LaunchTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@drawable/splash_logo_welcome</item>
<!--        <item name="android:windowIsTranslucent">true</item>-->
        <item name="android:windowLayoutInDisplayCutoutMode" tools:ignore="NewApi">shortEdges</item>
    </style>


    <!--首页轮播-->
    <style name="HomeBannerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp170</item>
        <item name="android:layout_marginTop">0dip</item>
        <!-- 自定义属性在styles.xml中不需要命名空间,直接用属性名就可以了 -->
        <!-- 开启自动轮播 -->
        <item name="banner_pointAutoPlayAble">true</item>
        <!-- 自动轮播的时间间隔 -->
        <item name="banner_pointAutoPlayInterval">3000</item>
        <!-- 指示点容器背景 -->
        <item name="banner_pointContainerBackground">@android:color/transparent</item>
        <!-- 指示点背景 -->
        <item name="banner_pointDrawable">@drawable/item_essence_video_bg</item>
        <!-- 指示点容器左右内间距 -->
        <item name="banner_pointContainerLeftRightPadding">10dip</item>
        <!-- 指示点上下外间距 -->
        <item name="banner_pointTopBottomMargin">42dip</item>
        <!-- 指示点左右外间距 -->
        <item name="banner_pointLeftRightMargin">4dip</item>
        <!-- 指示器的位置 -->
        <item name="banner_indicatorGravity">bottom|right</item>
        <!-- 页码切换过程的时间长度 -->
        <item name="banner_pageChangeDuration">800</item>
        <!-- 提示文案的文字大小 -->
        <item name="banner_tipTextSize">12sp</item>
        <!-- 提示文案的文字颜色 -->
        <item name="banner_tipTextColor">@color/colorAccent</item>
        <!-- 加载网络数据时覆盖在BGABanner最上层的占位图 -->
        <item name="banner_placeholderDrawable">@drawable/item_essence_video_bg</item>
    </style>

    <style name="InputStyle">
        <!-- 底部线 默认颜色 -->
        <item name="colorControlNormal">@color/white</item>
    </style>
    <style name="InputLayoutStyle" parent="Widget.Design.TextInputLayout">
        <!-- 颜色 -->
        <item name="android:textColor">@color/colorAccent</item>
    </style>


    <style name="DialogWindowTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <!-- Dialog的windowFrame框为无 -->
        <item name="android:windowFrame">@android:color/transparent</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsFloating">false</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 设置dialog的背景 -->
        <item name="android:windowBackground">@android:color/white</item>
        <!--控制灰度的值-->
        <item name="android:backgroundDimAmount">0.3</item>
        <!--windowAnimationStyle分为两种，一种是activityAnimation，一种是windowAnimation。-->
        <item name="android:windowAnimationStyle">@null</item>
        <!--是否允许对话框的背景变暗-->
        <item name="android:backgroundDimEnabled">true</item>
        <!--是否有遮盖-->
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Myratingbar" parent="Base.Widget.AppCompat.RatingBar.Indicator">
        <item name="android:progressDrawable">@drawable/ratingbar_style</item>
        <item name="android:minHeight">21.5dp</item>
        <item name="android:minWidth">25dp</item>
    </style>

