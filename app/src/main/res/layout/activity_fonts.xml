<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mr_zyl.project824.pro.newpost.view.Activity.FontsActivity">

    <LinearLayout
        android:id="@+id/ll_fonts_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">
            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="沃德天"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="2dp"
                android:autoSizeMaxTextSize="40dp"
                android:autoSizeStepGranularity="2dp"
                android:background="@color/colorPrimary"
                android:textColor="@color/white"
                android:maxLines="1"
                android:gravity="center"
                android:textSize="40dp"/>
            <TextView
                android:id="@+id/tv_auto_textview"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="沃德天啦真的"
                android:background="@color/colorAccent"
                android:maxLines="1"
                android:gravity="center"
                android:textSize="40dp"
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/tv_auto_textview2"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="沃德天啦真的扩展了"
                android:background="@color/colorAccent"
                android:maxLines="1"
                android:gravity="center"
                android:textSize="40dp"
                android:textColor="@color/white"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
