<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fl_essence_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.example.mr_zyl.project824.pro.base.view.refreshview.XRefreshView
        android:id="@+id/refreshview_id"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:isHeightMatchParent="true"
        app:isWidthMatchParent="true">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_essence_one"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:scrollbarStyle="insideInset"
            android:scrollbars="vertical"></androidx.recyclerview.widget.RecyclerView>

    </com.example.mr_zyl.project824.pro.base.view.refreshview.XRefreshView>

    <com.example.mr_zyl.project824.view.LoadView
        android:id="@+id/lv_essence_floatingLoad"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_scrollTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="@dimen/x45"
        android:layout_marginBottom="?attr/actionBarSize"
        android:src="@drawable/to_top_arrow2"
        app:fabSize="mini" />

</RelativeLayout>
