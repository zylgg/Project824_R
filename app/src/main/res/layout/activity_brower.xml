<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pro.essence.view.activity.BrowerActivity">


        <me.xiaopan.sketch.SketchImageView
            android:id="@+id/siv_browerpic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:layout_centerInParent="true"
            android:src="@drawable/item_essence_video_bg"
           />

        <LinearLayout
            android:id="@+id/layout_detail_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_linear_gradient_transparent_to_black"
            android:layout_alignParentBottom="true"
            android:visibility="gone"
            android:gravity="center">

                <TextView
                    android:id="@+id/button_detail_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_list_item"
                    android:contentDescription="@string/app_name"
                    android:drawableTop="@drawable/ic_action_share"
                    android:padding="14dp"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:text="分享" />

                <TextView
                    android:id="@+id/button_detail_applyWallpaper"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_list_item"
                    android:contentDescription="@string/app_name"
                    android:drawableTop="@drawable/ic_action_picture"
                    android:padding="14dp"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:text="壁纸" />

                <TextView
                    android:id="@+id/button_detail_play"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_list_item"
                    android:contentDescription="@string/app_name"
                    android:drawableTop="@drawable/ic_action_play"
                    android:padding="14dp"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:text="播放" />

                <TextView
                    android:id="@+id/button_detail_save"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_list_item"
                    android:contentDescription="@string/app_name"
                    android:drawableTop="@drawable/ic_action_save"
                    android:padding="14dp"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:text="保存" />
        </LinearLayout>

        <com.example.mr_zyl.project.pro.essence.view.selfview.RingView
            android:id="@+id/rv_BrowerActivity_loadprogress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            app:ringtextcolor="@color/colorPrimary"
            />

</RelativeLayout>
