<?xml version="1.0" encoding="utf-8"?>
<com.example.mr_zyl.project.pro.base.view.MyFragmentTabHost xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@android:id/tabhost"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:id="@android:id/tabcontent"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/main_content_bg"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

        </FrameLayout>

        <TabWidget
            android:id="@android:id/tabs"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_gravity="bottom"
            android:background="#F6F2F5"></TabWidget>
    </LinearLayout>

</com.example.mr_zyl.project.pro.base.view.MyFragmentTabHost>

