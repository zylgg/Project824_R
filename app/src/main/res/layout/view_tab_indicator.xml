<?xml version="1.0" encoding="utf-8"?>
<com.example.mr_zyl.project.pro.essence.view.selfview.RippleView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    app:rv_centered="true"
    app:rv_color="@color/main_bottom_text_select"
    app:rv_framerate="12"
    app:rv_rippleDuration="300">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_tab"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:contentDescription="@null"
            android:src="@drawable/main_bottom_essence_normal" />

        <TextView
            android:id="@+id/tv_tab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:text="@string/main_essence_text"
            android:textColor="@color/main_bottom_text_normal"
            android:textSize="12sp" />

    </LinearLayout>
</com.example.mr_zyl.project.pro.essence.view.selfview.RippleView>